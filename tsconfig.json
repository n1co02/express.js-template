{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true
  },
  "ts-node": {
    "swc": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./src/**/*.d.ts", "./src/**/*.ts", "./src/**/*.tsx"]
}
